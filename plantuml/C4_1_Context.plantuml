@startuml C4_1_Context

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title Sistema de Gestión de Personal - Hospital General de Medellín

Person(admin, "Administrador", "Gestiona el sistema y la información del personal.")
Person(rh, "Personal de RH", "Usa el sistema para registrar y mantener la información del personal.")
Person(empleado, "Empleado", "Interactúa con el sistema para actualizar su información personal y revisar sus turnos y beneficios.")

System_Boundary(c1, "Sistema de Gestión de Personal") {
    System(sgp, "Sistema de Gestión de Personal", "Permite el registro y la gestión de la información del personal, turnos y reportes.")
}

System_Ext(sistemaAutenticacion, "Sistema de Autenticación", "Verifica la identidad de los usuarios del sistema.")
System_Ext(sistemaGestionHospitalaria, "Sistema de Gestión Hospitalaria", "Sistema principal del hospital que maneja otras operaciones.")

Rel(admin, sgp, "Utiliza")
Rel(rh, sgp, "Registra y actualiza")
Rel(empleado, sgp, "Consulta y actualiza")
Rel(sgp, sistemaAutenticacion, "Valida usuarios a través de")
Rel(sgp, sistemaGestionHospitalaria, "Intercambia datos con")

@enduml
